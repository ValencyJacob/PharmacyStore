@page "/products/edit/{Id:int}"

@inject IProductService service
@inject NavigationManager navigationManager

@attribute [Authorize(Roles = StaticDetails.Role_Admin)]

<div class="container">

    @if (isFailed)
    {
        <div class="alert alert-danger text-center">
            <h3>
                Something is wrong. Please call the administrator.
            </h3>
        </div>
    }

    <div class="card text-center">
        <div class="card-header">
            Edit
        </div>
        <div class="card-body">
            @if (Model != null)
            {
                <h5 class="card-title">
                    @Model.Name
                </h5>

                <EditForm Model="Model" OnValidSubmit="EditModel">
                    <DataAnnotationsValidator />
                    <ValidationSummary />

                    <div class="form-group">
                        <label>
                            Company name
                        </label>
                        <InputText @bind-Value="@Model.Name" class="form-control" />
                        <ValidationMessage For="()=>Model.Name"></ValidationMessage>
                    </div>
                    <div class="form-group">
                        <label>
                            Price
                        </label>
                        <InputNumber @bind-Value="@Model.Price" class="form-control" />
                        <ValidationMessage For="()=>Model.Price"></ValidationMessage>
                    </div>
                    <div class="form-group">
                        <label>
                            Description
                        </label>
                        <InputTextArea @bind-Value="@Model.Summary" rows="5" class="form-control" />
                        <ValidationMessage For="()=>Model.Summary"></ValidationMessage>
                    </div>

                    <div class="form-group">
                        <label>
                            Here will be Image
                        </label>
                    </div>

                    <div class="form-control border-0">

                        <a class="btn btn-outline-primary" href="/products/details/@Model.Id">
                            <span class="oi oi-arrow-left"></span>
                            Back
                        </a>

                        <button class="btn btn-outline-warning" type="submit">
                            <span class="oi oi-pencil"></span>
                            Edit
                        </button>

                    </div>

                </EditForm>
            }
            else
            {
                <h1 class="text-center mt-5">
                    Loading...
                </h1>
            }
        </div>
    </div>
</div>

@code {
    [Parameter]
    public int Id { get; set; }

    public ProductViewModel Model = new ProductViewModel();

    private bool isFailed = false;

    protected override async Task OnInitializedAsync()
    {
        Model = await service.GetByIdAsync(EndpointsService.ProductEndpoint, Id);
    }

    private async Task EditModel()
    {
        bool isSuccess = await service.UpdateAsync(EndpointsService.ProductEndpoint, Model, Model.Id);

        if (isSuccess)
        {
            navigationManager.NavigateTo($"/products/details/{Model.Id}");
        }
        else
        {
            isFailed = true;
        }
    }
}
